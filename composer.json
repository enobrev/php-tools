{
    "name": "enobrev/php-tools",
    "description": "General Tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Armendariz",
            "email": "src@enobrev.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/enobrev/php-tools"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "adbario/php-dot-notation": "~2.2",
        "doctrine/inflector": "^2.0",
        "laminas/laminas-diactoros": "^2.2",
        "laminas/laminas-httphandlerrunner": "^1.1",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4" : {
            "Enobrev\\" : "src/"
        },
        "files": [
            "src/ErrorsToExceptions.php",
            "src/Arrays.php",
            "src/DateTime.php",
            "src/Debugging.php",
            "src/Headers.php",
            "src/Strings.php",
            "src/System.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.1"
    }
}
