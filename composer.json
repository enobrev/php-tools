{
    "name": "enobrev/php-tools",
    "description": "General Tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Armendariz",
            "email": "src@enobrev.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/enobrev/php-tools"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/melbings/php-dot-notation.git"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-json": "*",
        "monolog/monolog": "^1.21",
        "zendframework/zend-diactoros": "^1.8",
        "adbario/php-dot-notation": "dev-recursive-merge"
    },
    "autoload": {
        "psr-4" : {
            "Enobrev\\" : "src/"
        },
        "files": [
            "src/ErrorsToExceptions.php",
            "src/Arrays.php",
            "src/DateTime.php",
            "src/Debugging.php",
            "src/Headers.php",
            "src/Strings.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "vimeo/psalm": "^2.0"
    }
}
